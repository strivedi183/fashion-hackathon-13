<div class="main-homepage-wrapper">
	<div class="opacity" style="display:none;"></div>
	<div class="login-view" style="display:none;">
		<div class="login-wrapper">
			<%= render partial: "users/sessions/new" %>
		</div>
		<div class="registration-wrapper">
			<%= render partial: "users/registrations/new" %>
		</div>
	</div>
	<div class="header">
		<div class="logo">
			<%= image_tag 'logo.png' %>
		</div>

		<div class="button" id="login">Login</div>
	</div>

	<div class="search-box">
			<h1>Find your FashionMate and Start Shopping</h1>
			<form id="search-fields" data-role="none">
				<div class="input-elements">
					<label>Weight: </label><input class="search-main-input" id="weight" placeholder="Weight">
					<label>Height: </label><input class="search-main-input" id="height" placeholder="Height">
				</div>
				<input id="search" type="submit" value="Search">
			</form>
		</div>
	<div class="content-wrapper">
		<div class="styles-wrapper-main">
			<ul class="styles-grid-main">
				<%= render partial: "styles/styles" %>
			</ul>
		</div>
	</div>
</div>