<%= form_for @style, :url => styles_path, :html => { :multipart => true } do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>
  <%= form.label :image %>
  <%= form.file_field :image %>
  <%= form.label :size %>
  <%= form.text_field :size %>
  <%= form.label :brand %>
  <%= form.text_field :brand %>
  <%= form.label :color %>
  <%= form.text_field :color %>
  <%= form.submit %>
<% end %>